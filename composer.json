{
    "name": "achyutn/laravel-hls",
    "description": "A package to convert video files to HLS with rotating key encryption.",
    "type": "library",
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "keywords": ["laravel", "hls", "video", "streaming", "encryption"],
    "autoload": {
        "psr-4": {
            "AchyutN\\LaravelHLS\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AchyutN\\LaravelHLS\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Achyut Neupane",
            "email": "achyutkneupane@gmail.com",
            "homepage": "https://achyut.com.np",
            "role": "Maintainer"
        }
    ],
    "extra": {
        "laravel": {
            "providers": [
                "AchyutN\\LaravelHLS\\HLSProvider"
            ]
        }
    },
    "require": {
        "php": "^8.1|^8.2|^8.3|^8.4"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.1",
        "laravel/pint": "^1.23",
        "rector/rector": "^2.1",
        "pestphp/pest": "^3.8"
    },
    "scripts": {
        "lint": [
            "rector",
            "pint"
        ],
        "test:type-coverage": "pest",
        "test:lint": [
            "pint --test"
        ],
        "test:unit": "# pest --parallel --coverage --min=90",
        "test:types": "phpstan",
        "test": [
            "@test:lint",
            "@test:type-coverage",
            "@test:unit",
            "@test:types"
        ]
    },
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
